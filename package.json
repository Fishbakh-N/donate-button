{
  "scripts": {
    "build:donateButton": "yarn workspace @everydotorg/donate-button build && cp -r packages/donate-button/dist ./docs",
    "build:donateButtonBeta": "yarn workspace @everydotorg/donate-button-beta build && cp -r packages/donate-button-beta/dist ./docs",
    "build": "yarn build:donateButton && yarn build:donateButtonBeta",
    "lint": "concurrently --names 'donate-button,cloudflare-worker' 'yarn workspace @everydotorg/donate-button lint' 'yarn workspace @everydotorg/donate-button-cloudflare-worker lint'",
    "lint:fix": "concurrently --names 'donate-button,cloudflare-worker' 'yarn workspace @everydotorg/donate-button lint:fix' 'yarn workspace @everydotorg/donate-button-cloudflare-worker lint:fix'",
    "test": "concurrently --names 'donate-button,cloudflare-worker' 'yarn workspace @everydotorg/donate-button test' 'yarn workspace @everydotorg/donate-button-cloudflare-worker test'"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^5.3.0",
    "prettier": "^2.2.1",
    "xo": "^0.37.1"
  }
}
